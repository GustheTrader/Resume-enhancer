# Database (use Supabase PostgreSQL)
# Get this from Supabase Project Settings > Database > Connection String (URI mode with password)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# NextAuth
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Supabase Configuration
# Get these from Supabase Project Settings > API
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# AbacusAI API Key (if using AbacusAI services)
ABACUSAI_API_KEY="your-abacusai-api-key"

# Optional: User API Keys (users can configure these in the app)
# These are stored encrypted in the database per user
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_API_KEY=your-google-api-key
